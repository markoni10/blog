datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "./"
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  excerpt   String?
  img       String?
  author_id Int

  @@map("posts")
}

model Comment {
  id      Int @id @default(autoincrement())
  content String
  authorId Int

  @@map("comments")
}

model User {
  id Int  @id @default(autoincrement())
  username String?

  @@map("users")
}